# ParkSpot Backend Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# SECURITY - CHANGE THESE IN PRODUCTION!
# ============================================

# Generate with: mix phx.gen.secret
SECRET_KEY_BASE=generate_a_64_character_secret_key_base_here

# API key for authenticating mobile app requests
API_KEY=your_secure_api_key_here

# Redis password
REDIS_PASSWORD=your_redis_password_here

# PostgreSQL password
POSTGRES_PASSWORD=your_postgres_password_here

# ============================================
# CORS / Origin Settings
# ============================================

# Comma-separated list of allowed origins
CHECK_ORIGIN=//localhost:3000,//api.parksmart.io

# Phoenix host
PHX_HOST=localhost

# ============================================
# Database Configuration
# ============================================

# These are set automatically in docker-compose.yml
# DATABASE_URL=postgres://postgres:postgres@timescaledb:5432/parkspot
# REDIS_URL=redis://:password@redis:6379
